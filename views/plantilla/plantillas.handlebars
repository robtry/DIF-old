<div class="row">
	<!-- ============================================================== -->
	<!-- basic table  -->
	<!-- ============================================================== -->
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
		<div class="card">
			<h5 class="card-header" data-role={{role}} id="role"></h5>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-striped table-bordered first">
						<thead>
							<tr>
								<th>Nombre</th>
								<th>Descripción</th>
								<th>Actualización</th>
								
								<th></th>
							</tr>
						</thead>
						<tbody>
							{{#each plantilla}}
								<tr>
									<td>{{nombre}}</td>
									<td>{{descripcion}}</td>
									<td>{{updatedAt}}</td>

									<td>
										<div class="btn-group ml-auto"> 
                                            <a href="/plantilla/editar/{{id}}" class="btn btn-sm btn-outline-light">Editar</a>
											<button class="btn btn-sm btn-outline-light delete-p">
												<i class="far fa-trash-alt" data-id={{id}}></i>
											</button>
                                        </div>
									</td>
								</tr>
							{{else}}
								<p>Aún no hay registros</p>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
