<div class="row">
	<!-- ============================================================== -->
	<!-- basic table  -->
	<!-- ============================================================== -->
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
		<div class="card">
			<h5 class="card-header">  </h5>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-striped table-bordered first">
						<thead>
							<tr>
								<th>Articulo</th>
								<th>Derecho</th>
							</tr>
						</thead>
						<tbody>
							{{#each derecho}}
								<tr>
									<td>{{articulo}}</td>
									<td>{{derecho}}</td>
									<td>
										<div class="btn-group ml-auto"> 
											<button class="btn btn-sm btn-outline-light delete-dercho" data-id={{id}}>
												<i class="far fa-trash-alt"></i>
											</button>
                                        </div>
									</td>
								</tr>
							{{else}}
								<p>AÃºn no hay registros</p>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<form action="/derechos" method="POST" class="needs-validation" autocomplete="off">
		<br>
		<h3>Agregar Derechos</h3>
		<div class="row">
				<div class="col-md-4 mb-3">
					<label for="nombre">Articulo</label>
					<input type="text" class="form-control" id="articulo" name="articulo">
					<p>*Obligatorio</p>
				</div>
				<div class="col-md-4 mb-3">
					<label for="app">Derecho</label>
					<input type="text" class="form-control" id="derecho" name="derecho">
					<p>*Obligatorio</p>
				</div>
			</div>
			<button class="btn btn-primary btn-lg" type="submit">Agregar</button>

	</form>
</div>
