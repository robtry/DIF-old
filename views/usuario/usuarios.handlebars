<div class="row">
	<!-- ============================================================== -->
	<!-- basic table  -->
	<!-- ============================================================== -->
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
		<div class="card">
			<h5 class="card-header" data-role={{role}} id="role">{{tipo}}s</h5>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-striped table-bordered first">
						<thead>
							<tr>
								<th>Nickname</th>
								<th>Nombre</th>
								<th>Apellido Paterno</th>
								<th>Apellido Materno</th>
								<th>No. Cédula</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{{#each usr}}
								<tr>
									<td>{{nickname}}</td>
									<td>{{nombre}}</td>
									<td>{{app}}</td>
									<td>{{apm}}</td>
									<td>{{no_cedula}}</td>
									<td>
										<div class="btn-group ml-auto">
											<a href="/usuario/detalles/{{id}}" class="btn btn-sm btn-outline-light show-nna">
												<i class="fas fa-eye"></i>
											</a>
                                            <a href="/usuario/editar/{{id}}" class="btn btn-sm btn-outline-light">Editar</a>
											<button class="btn btn-sm btn-outline-light delete-usr">
												<i class="far fa-trash-alt" data-id={{id}}></i>
											</button>
                                        </div>
									</td>
								</tr>
							{{else}}
								<p>Aún no hay registros</p>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
